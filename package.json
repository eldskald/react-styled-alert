    "@vitejs/plugin-react": "^2.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
